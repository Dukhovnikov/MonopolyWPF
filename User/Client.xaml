<Window x:Class="User.UserForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:User"
        mc:Ignorable="d"
        Title="Client" Height="384" Width="525"
        Loaded="Window_Loaded"
        Closed="Window_Closed">
    <Grid Margin="0,0,0,-2">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFE4F5F0" Offset="0.419"/>
                <GradientStop Color="#FF299170" Offset="1"/>
                <GradientStop Color="#FFB4ECDA" Offset="0.008"/>

            </LinearGradientBrush>
        </Grid.Background>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="206" Margin="216,91,0,0" VerticalAlignment="Top" Width="150" />
        <ListBox x:Name="listBox1" HorizontalAlignment="Left" Height="178" Margin="32,119,0,0" VerticalAlignment="Top" Width="150"/>
        <Label x:Name="label" Content="Transactions" HorizontalAlignment="Center" Margin="56,80,348,0" VerticalAlignment="Top" Width="113" FontSize="16" FontFamily="Lucida Sans Unicode" ToolTip="History of your transactions" RenderTransformOrigin="0.533,0.561"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="27" Margin="199,27,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="197" GotFocus="textBox_GotFocus" FontFamily="Lucida Sans Unicode" FontSize="16" ToolTip="Please! Enter your name" UndoLimit="20"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="28" Margin="12,313,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="384" GotFocus="textBox1_GotFocus" FontFamily="Lucida Sans Unicode" ToolTip="Please! Enter your message" UndoLimit="50" FontSize="14.667"/>
        <Button x:Name="button" Content="Find Server" HorizontalAlignment="Left" Margin="407,27,0,0" VerticalAlignment="Top" Width="100" Click="button_Click" ToolTip="Click here to find server." FontFamily="Lucida Sans Unicode" FontSize="14.667" OpacityMask="#FF045744" >
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>
        <Button x:Name="button1" Content="Send " HorizontalAlignment="Left" Margin="407,313,0,0" VerticalAlignment="Top" Width="100" Click="button1_Click" Height="28" ToolTip="Click here to send your message" FontSize="16" FontFamily="Lucida Sans"/>
        <Button x:Name="button2" Content="Transaction" HorizontalAlignment="Left" Margin="407,270,0,0" VerticalAlignment="Top" Width="100" Click="button2_Click" ToolTip="Click here to complete the transaktions" FontSize="14.667" FontFamily="Lucida Sans Unicode"/>
        <Label x:Name="label1" Content="Enter your username&#xD;&#xA;  to enter the game" HorizontalAlignment="Left" Margin="12,10,0,0" VerticalAlignment="Top" Height="65" FontFamily="Lucida Sans Unicode" FontSize="16"/>

    </Grid>


</Window>
