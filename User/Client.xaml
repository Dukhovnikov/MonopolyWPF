<Window x:Class="User.UserForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:User"
        mc:Ignorable="d"
        Title="Client" Height="475.5" Width="530.5"
        Loaded="Window_Loaded"
        Closed="Window_Closed" Icon="favicon.ico">
    <Grid Margin="0,0,0,-2">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFE4F5F0" Offset="0.419"/>
                <GradientStop Color="#FF299170" Offset="1"/>
                <GradientStop Color="#FFB4ECDA" Offset="0.008"/>

            </LinearGradientBrush>
        </Grid.Background>
        <ListBox x:Name="listBox1" HorizontalAlignment="Left" Height="178" Margin="12,202,0,0" VerticalAlignment="Top" Width="188"/>
        <Label x:Name="label" Content="History of transactions" HorizontalAlignment="Center" Margin="12,162,322,0" VerticalAlignment="Top" Width="188" FontSize="16" FontFamily="Lucida Sans Unicode" ToolTip="History of your transactions" RenderTransformOrigin="0.533,0.561" Foreground="#FF295E4E"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="29" Margin="119,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="196" GotFocus="textBox_GotFocus" FontFamily="Lucida Sans Unicode" FontSize="16" ToolTip="Please! Enter your name" UndoLimit="20"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="28" Margin="12,396,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="384" GotFocus="textBox1_GotFocus" FontFamily="Lucida Sans Unicode" ToolTip="Please! Enter your message" UndoLimit="50" FontSize="14.667"/>
        <Button x:Name="button" Content="Connect" HorizontalAlignment="Left" Margin="320,90,0,0" VerticalAlignment="Top" Width="100" Click="button_Click" ToolTip="Click here to find server." FontFamily="Lucida Sans Unicode" FontSize="16" OpacityMask="#FF045744" BorderBrush="#FF295E4E" >
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>
        <Button x:Name="button1" Content="Send " HorizontalAlignment="Left" Margin="407,396,0,0" VerticalAlignment="Top" Width="100" Click="button1_Click" Height="29" ToolTip="Click here to send your message" FontSize="16" FontFamily="Lucida Sans" Background="{x:Null}" BorderBrush="#FF295E4E" Foreground="#FF11382C"/>
        <Button x:Name="button2" Content="Transaction" HorizontalAlignment="Left" Margin="407,352,0,0" VerticalAlignment="Top" Width="100" Click="button2_Click" ToolTip="Click here to complete the transaktions" FontSize="16" FontFamily="Lucida Sans Unicode" Background="{x:Null}" BorderBrush="#FF295E4E" Foreground="#FF11382C"/>
        <Label x:Name="label1" Content="  Enter your username and click &quot;Connect&quot; to start the game" HorizontalAlignment="Left" Margin="12,51,0,0" VerticalAlignment="Top" Height="34" FontFamily="Lucida Sans Unicode" FontSize="16" Width="495" Foreground="#FF295E4E"/>
        <Label x:Name="label2" Content="Welcome to your pesonal office of &quot;Monopoly&quot;" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top" FontFamily="Lucida Sans Unicode" FontSize="21.333" FontWeight="Bold" Width="502" Foreground="#FF11382C"/>

    </Grid>


</Window>
