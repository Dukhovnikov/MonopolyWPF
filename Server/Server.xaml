<Window x:Class="Server.ServerForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Server"
        mc:Ignorable="d"
        Title="Server" Height="218.421" Width="525" Icon="favicon.ico">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFE4F5F0" Offset="0.419"/>
                <GradientStop Color="#FF299170" Offset="1"/>
                <GradientStop Color="#FFB4ECDB" Offset="0.008"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="button" Content="Run Server" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="127" Click="button_Click" Height="27" FontFamily="Lucida Sans Unicode" FontSize="16"/>
        <Button x:Name="button1" Content="Start Game" HorizontalAlignment="Left" Margin="10,87,0,0" VerticalAlignment="Top" Width="127" Click="button1_Click" Height="27" FontFamily="Lucida Sans Unicode" FontSize="14.667"/>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="102" Margin="158,10,0,0" VerticalAlignment="Top" Width="349"/>
        <Button x:Name="button2" Content="send to" HorizontalAlignment="Left" Margin="231,145,0,0" VerticalAlignment="Top" Width="75" Click="button2_Click" FontFamily="Lucida Sans Unicode" FontSize="16" Height="27"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="27" Margin="37,145,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="189" FontFamily="Lucida Sans Unicode" FontSize="16"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="311,145,0,0" VerticalAlignment="Top" Width="164" Height="27" ToolTip="Select user" FontFamily="Lucida Sans Unicode" FontSize="16"/>

    </Grid>
</Window>
